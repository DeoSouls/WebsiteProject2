{
    "compilerOptions": {
      "target": "es6",                          
      "module": "ESNext",                    
      "lib": [ "es6" ,"dom" ],                     
      "allowJs": true,
      "jsx": "react",
      "outDir": "build",                      
      "rootDir": "src",
      "strict": true,         
      "noImplicitAny": false,
      "types": ["jest"],
      "esModuleInterop": true,
      "moduleResolution": "node",
      "plugins": [{ "name": "typescript-plugin-css-modules" }]
    }
}